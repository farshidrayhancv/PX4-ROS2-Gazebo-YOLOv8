<?xml version="1.0" ?>
<sdf version="1.6">
  <model name="hatchback_blue">

    <!-- ==================== CHASSIS ==================== -->
    <link name="chassis">
      <inertial>
        <mass>800</mass>
        <pose>0.34 0 0.5 0 0 0</pose>
        <inertia>
          <ixx>200</ixx> <ixy>0</ixy> <ixz>0</ixz>
          <iyy>800</iyy> <iyz>0</iyz>
          <izz>800</izz>
        </inertia>
      </inertial>
      <visual name="visual">
        <pose>0 0 0 0 0 1.57079632679</pose>
        <geometry>
          <mesh>
            <scale>0.0254 0.0254 0.0254</scale>
            <uri>model://hatchback_blue/meshes/hatchback.obj</uri>
          </mesh>
        </geometry>
      </visual>
      <collision name="collision">
        <pose>0.34 0 0.5 0 0 0</pose>
        <geometry>
          <box><size>3.6 1.8 1.0</size></box>
        </geometry>
      </collision>
    </link>

    <!-- ==================== FORWARD-FACING CAMERA ==================== -->
    <link name="camera_link">
      <pose>1.2 0 1.2 0 0.3 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.001</ixx><ixy>0</ixy><ixz>0</ixz>
          <iyy>0.001</iyy><iyz>0</iyz><izz>0.001</izz>
        </inertia>
      </inertial>
      <sensor name="front_camera" type="camera">
        <always_on>1</always_on>
        <update_rate>15</update_rate>
        <visualize>true</visualize>
        <topic>car/camera</topic>
        <camera>
          <horizontal_fov>2.094</horizontal_fov>
          <image>
            <width>640</width>
            <height>480</height>
            <format>R8G8B8</format>
          </image>
          <clip>
            <near>0.1</near>
            <far>200</far>
          </clip>
        </camera>
      </sensor>
    </link>

    <joint name="camera_joint" type="fixed">
      <parent>chassis</parent>
      <child>camera_link</child>
    </joint>

    <!-- ==================== STEERING LINKS ==================== -->
    <link name="front_left_steering_link">
      <pose>1.6 0.75 0 0 0 0</pose>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.01</ixx> <ixy>0</ixy> <ixz>0</ixz>
          <iyy>0.01</iyy> <iyz>0</iyz>
          <izz>0.01</izz>
        </inertia>
      </inertial>
    </link>

    <link name="front_right_steering_link">
      <pose>1.6 -0.75 0 0 0 0</pose>
      <inertial>
        <mass>1.0</mass>
        <inertia>
          <ixx>0.01</ixx> <ixy>0</ixy> <ixz>0</ixz>
          <iyy>0.01</iyy> <iyz>0</iyz>
          <izz>0.01</izz>
        </inertia>
      </inertial>
    </link>

    <!-- ==================== WHEEL LINKS ==================== -->
    <!-- Front Left Wheel -->
    <link name="front_left_wheel">
      <pose>1.6 0.75 0 -1.5707963 0 0</pose>
      <inertial>
        <mass>15</mass>
        <inertia>
          <ixx>0.5</ixx> <ixy>0</ixy> <ixz>0</ixz>
          <iyy>0.5</iyy> <iyz>0</iyz>
          <izz>0.8</izz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <cylinder><radius>0.30</radius><length>0.20</length></cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>2.0</mu>
              <mu2>1.5</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- Front Right Wheel -->
    <link name="front_right_wheel">
      <pose>1.6 -0.75 0 -1.5707963 0 0</pose>
      <inertial>
        <mass>15</mass>
        <inertia>
          <ixx>0.5</ixx> <ixy>0</ixy> <ixz>0</ixz>
          <iyy>0.5</iyy> <iyz>0</iyz>
          <izz>0.8</izz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <cylinder><radius>0.30</radius><length>0.20</length></cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>2.0</mu>
              <mu2>1.5</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- Rear Left Wheel -->
    <link name="rear_left_wheel">
      <pose>-1.0 0.75 0 -1.5707963 0 0</pose>
      <inertial>
        <mass>15</mass>
        <inertia>
          <ixx>0.5</ixx> <ixy>0</ixy> <ixz>0</ixz>
          <iyy>0.5</iyy> <iyz>0</iyz>
          <izz>0.8</izz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <cylinder><radius>0.30</radius><length>0.20</length></cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>2.0</mu>
              <mu2>1.5</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- Rear Right Wheel -->
    <link name="rear_right_wheel">
      <pose>-1.0 -0.75 0 -1.5707963 0 0</pose>
      <inertial>
        <mass>15</mass>
        <inertia>
          <ixx>0.5</ixx> <ixy>0</ixy> <ixz>0</ixz>
          <iyy>0.5</iyy> <iyz>0</iyz>
          <izz>0.8</izz>
        </inertia>
      </inertial>
      <collision name="collision">
        <geometry>
          <cylinder><radius>0.30</radius><length>0.20</length></cylinder>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>2.0</mu>
              <mu2>1.5</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
    </link>

    <!-- ==================== STEERING JOINTS ==================== -->
    <joint name="front_left_steering_joint" type="revolute">
      <parent>chassis</parent>
      <child>front_left_steering_link</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-0.6</lower>
          <upper>0.6</upper>
          <effort>1e6</effort>
        </limit>
      </axis>
    </joint>

    <joint name="front_right_steering_joint" type="revolute">
      <parent>chassis</parent>
      <child>front_right_steering_link</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-0.6</lower>
          <upper>0.6</upper>
          <effort>1e6</effort>
        </limit>
      </axis>
    </joint>

    <!-- ==================== WHEEL JOINTS ==================== -->
    <joint name="front_left_wheel_joint" type="revolute">
      <parent>front_left_steering_link</parent>
      <child>front_left_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1.79769e+308</lower>
          <upper>1.79769e+308</upper>
        </limit>
      </axis>
    </joint>

    <joint name="front_right_wheel_joint" type="revolute">
      <parent>front_right_steering_link</parent>
      <child>front_right_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1.79769e+308</lower>
          <upper>1.79769e+308</upper>
        </limit>
      </axis>
    </joint>

    <joint name="rear_left_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>rear_left_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1.79769e+308</lower>
          <upper>1.79769e+308</upper>
        </limit>
      </axis>
    </joint>

    <joint name="rear_right_wheel_joint" type="revolute">
      <parent>chassis</parent>
      <child>rear_right_wheel</child>
      <axis>
        <xyz>0 0 1</xyz>
        <limit>
          <lower>-1.79769e+308</lower>
          <upper>1.79769e+308</upper>
        </limit>
      </axis>
    </joint>

    <!-- ==================== ACKERMANN STEERING PLUGIN ==================== -->
    <plugin filename="gz-sim-ackermann-steering-system"
            name="gz::sim::systems::AckermannSteering">
      <left_joint>front_left_wheel_joint</left_joint>
      <left_joint>rear_left_wheel_joint</left_joint>
      <right_joint>front_right_wheel_joint</right_joint>
      <right_joint>rear_right_wheel_joint</right_joint>
      <left_steering_joint>front_left_steering_joint</left_steering_joint>
      <right_steering_joint>front_right_steering_joint</right_steering_joint>
      <wheel_separation>1.5</wheel_separation>
      <kingpin_width>1.3</kingpin_width>
      <wheel_base>2.6</wheel_base>
      <wheel_radius>0.30</wheel_radius>
      <steering_limit>0.6</steering_limit>
      <max_velocity>20.0</max_velocity>
      <max_acceleration>10.0</max_acceleration>
    </plugin>

  </model>
</sdf>
